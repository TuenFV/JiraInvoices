<% if flash.any? %>
  <% flash.each do |type, msg| %>
    <% if type == "notice" %>
      <div class="alert alert-success d-flex align-items-center" role="notice" >
    <% elsif type == "alert" %>
      <div class="alert alert-danger d-flex align-items-center" role="alert" >
    <% end %>
        <%= msg %>
      </div>
  <% end %>
<% end %>
